<ContentDialog
    x:Class="RadiaKatolickie.Views.MessageDialoges.ConnectionDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Brak połączenia z internetem."
    Background="{ThemeResource SystemControlChromeMediumAcrylicElementMediumBrush}"
    PrimaryButtonClick="CheckButton_Click"
    PrimaryButtonStyle="{StaticResource ButtonRevealStyle}"
    PrimaryButtonText="Spróbuj ponownie"
    SecondaryButtonClick="ExitButton_Click"
    SecondaryButtonStyle="{StaticResource ButtonRevealStyle}"
    SecondaryButtonText="Wyjdź"
    mc:Ignorable="d">

    <ContentDialog.Content>
        <TextBlock Text="Aby aplikacja działała, wymagane jest połączenie z internetem.&#x0a;Sprawdź połączenie i spróbuj ponownie." TextWrapping="Wrap"/>
    </ContentDialog.Content>
</ContentDialog>